{{ form_start(form, {'attr': {'id': 'trick'}}) }}
    
    <div class="medias">
        {% set picturesPrototype %}
        
            <li id="picture___name__">
                <button type="button" class="btn btn-primary mt-5 ms-3" data-bs-toggle="modal" data-bs-target="#edit_picture___name__">
                    <i class="fas fa-pencil-alt"></i>
                </button>
                <button type="button" class="btn btn-danger on-remove mt-5">
                    <i class="fas fa-trash"></i>
                </button>
                <div class="modal fade" id="edit_picture___name__" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalConfirmLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Ajouter une image</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true"></span>
                                </button>
                            </div>
                            <div class="modal-body">
                                {{ form_row(form.pictures.vars.prototype.title, {'attr': {'form': 'trick'}}) }}
                                {{ form_row(form.pictures.vars.prototype.path, {'attr': {'form': 'trick'}}) }}
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Ok</button>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        {% endset %}

        <ul class="picture d-flex">
            {% for picture in form.pictures %}
                <li id="picture_{{ picture.vars.id }}">
                    <div class="mt-3 p-5 image" style="background-image: url({{ asset('images/' ~ picture.vars.value.path) }});">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#edit_picture_{{ picture.vars.id }}">
                            <i class="fas fa-pencil-alt"></i>
                        </button>
                        <button type="button" class="btn btn-danger on-remove">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                    <div class="modal fade" id="edit_picture_{{ picture.vars.id }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalConfirmLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Ajouter une image</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true"></span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    {{ form_row(picture.title, {'attr': {'form': 'trick'}}) }}
                                    {{ form_row(picture.path, {'attr': {'form': 'trick'}}) }}
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Ok</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
        <div class="d-flex justify-content-center">
            <button type="button" data-counter="{{ form.pictures|length }}" class="add_item_link btn btn-outline-primary" data-prototype="{{ picturesPrototype|e('html_attr') }}" data-type="picture">Ajouter une image</button>
        </div>
    </div>

<div class="videos">
    {% set videosPrototype %}

        <li id="video___name__">
            <button type="button" class="btn btn-primary mt-5 ms-3" data-bs-toggle="modal" data-bs-target="#edit_video___name__">
                <i class="fas fa-pencil-alt"></i>
            </button>
            <button type="button" class="btn btn-danger on-remove mt-5">
                <i class="fas fa-trash"></i>
            </button>
            <div class="modal fade" id="edit_video___name__" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalConfirmLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Ajouter une video</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true"></span>
                            </button>
                        </div>
                        <div class="modal-body">
                            {{ form_row(form.videos.vars.prototype.title, {'attr': {'form': 'trick'}}) }}
                            {{ form_row(form.videos.vars.prototype.path, {'attr': {'form': 'trick'}}) }}
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Ok</button>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    {% endset %}

    <ul class="video d-flex">
        {% for video in form.videos %}
            <li id="picture_{{ video.vars.id }}">
                <div class="container">
                    {% for video in trick.videos %}
                        <div class="card" style="width: 18rem;">
                            <iframe src="{{ video.path }}" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                    {% endfor %}
                    <div class="">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#edit_video_{{ video.vars.id }}">
                            <i class="fas fa-pencil-alt"></i>
                        </button>
                        <button type="button" class="btn btn-danger on-remove">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
                <div class="modal fade" id="edit_video_{{ video.vars.id }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalConfirmLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Editer une video</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true"></span>
                                </button>
                            </div>
                            <div class="modal-body">
                                {{ form_row(video.title, {'attr': {'form': 'trick'}}) }}
                                {{ form_row(video.path, {'attr': {'form': 'trick'}}) }}
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Ok</button>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
    <div class="d-flex justify-content-center">
        <button type="button" data-counter="{{ form.videos|length }}" class="add_item_link btn btn-outline-primary" data-prototype="{{ videosPrototype|e('html_attr') }}" data-type="picture">Ajouter une video</button>
    </div>
</div>

    <div class="d-flex justify-content-center mt-3 mb-3">
        <div class="col-10">
            <div class="form-group row">
                {{ form_widget(form.name, {'attr': {'form': 'trick', class: 'form-control'}}) }}
            </div>
            <div class="form-group row">
                {{ form_widget(form.description, {'attr': {'form': 'trick', class: 'form-control'}}) }}
            </div>
            <div class="form-group row">
                {{ form_widget(form.trickGroup, {'attr': {'form': 'trick', class: 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <input type="hidden" name="_csrf_token" value="{{ button_label|default('Save') }}">
        <button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
    </div>
    {{ form_widget(form._token) }}

{{ form_end(form, {'render_rest': false}) }}

<script src="{{ asset('js/collection.js') }}"></script>